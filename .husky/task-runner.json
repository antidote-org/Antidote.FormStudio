{
    "tasks": [
        {
            "name": "fantomas-format-staged-files",
            "group": "pre-commit",
            "command": "dotnet",
            "args": [
                "fantomas",
                "${staged}"
            ],
            "include": [
                "src/**/*.fs",
                "src/**/*.fsx",
                "src/**/*.fsi",
                "packages/**/*.fs",
                "packages/**/*.fsx",
                "packages/**/*.fsi",
                "test/**/*.fs",
                "test/**/*.fsx",
                "test/**/*.fsi"
            ]
        }
    ]
}
